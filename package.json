{
  "name": "b3wallet",
  "version": "0.5.0",
  "author": "b3hr4d",
  "license": "MIT",
  "description": "Wallet and System Canister for the B3wallet on the Internet Computer",
  "keywords": [
    "wallet",
    "bitcoin",
    "ethereum",
    "blockchain",
    "internet computer",
    "icp",
    "dfinity"
  ],
  "scripts": {
    "install": "cd frontend && yarn install",
    "dfx:start": "scripts/start.sh",
    "dfx:install": "scripts/install.sh",
    "dfx:stop": "dfx stop",
    "build:wallet": "./scripts/b3_wallet.sh",
    "deploy": "dfx deploy",
    "ic:deploy": "dfx generate b3_wallet && dfx deploy b3_wallet --network ic",
    "generate": "dfx generate",
    "ledger:balance": "ts-node scripts/ledger.balance.ts",
    "ledger:transfer": "ts-node scripts/ledger.transfer.ts",
    "ledger:account-id": "ts-node ./scripts/ledger.account-id.ts",
    "load-wasm:wallet": "ts-node ./scripts/load-wasm.wallet.ts",
    "load-wasm:system": "ts-node ./scripts/load-wasm.system.ts",
    "copy-wasm": "yarn build:wallet && ts-node ./scripts/copy-wasm.ts",
    "ic:dev": "cd frontend && yarn ic:dev",
    "dev": "cd frontend && yarn dev",
    "build": "yarn build:ic",
    "build:ic": "cd frontend && yarn build",
    "build:local": "cd frontend && yarn build:local"
  },
  "devDependencies": {
    "@types/node": "^18.15.13",
    "@types/node-fetch": "^2.6.3",
    "@types/semver": "^7.5.0",
    "dotenv": "^16.3.1",
    "typescript": "5.1.6"
  },
  "dependencies": {
    "@dfinity/agent": "^0.18",
    "@dfinity/auth-client": "^0.18",
    "@dfinity/candid": "^0.18",
    "@dfinity/identity": "^0.18",
    "@dfinity/identity-secp256k1": "^0.18",
    "@dfinity/ledger": "^0.0.11",
    "@dfinity/nns": "^0.16",
    "@dfinity/principal": "^0.18",
    "@dfinity/utils": "^0.0.18",
    "assert": "^2.0.0",
    "buffer": "^6.0.3",
    "compressorjs": "^1.2.1",
    "events": "^3.3.0",
    "node-fetch": "^3.3",
    "pem-file": "^1.0.1",
    "react-dropzone": "^14.2",
    "semver": "^7.5",
    "stream-browserify": "^3.0",
    "util": "^0.12"
  }
}